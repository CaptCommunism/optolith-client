  "description": "A generator for heroes for the P&P-RPG 'The Dark Eye'.",
  "author": {
    "name": "Lukas Obermann",
    "email": "support@optolith.app"
  },
  "homepage": "https://github.com/Elytherion/tdeheroes",
  "license": "GPL-3.0",
  "main": "app/main.js",
  "dependencies": {
    "classnames": "2.2.5",
    "electron-localshortcut": "3.1.0",
    "electron-log": "2.2.12",
    "electron-updater": "4.0.5",
    "electron-window-state": "4.1.1",
    "esm": "3.2.4",
    "react": "16.8.4",
    "react-custom-scrollbars": "4.2.1",
    "react-dom": "16.8.4",
    "react-markdown": "4.0.6",
    "react-portal": "4.2.0",
    "react-progress-arc": "1.0.7",
    "react-redux": "6.0.1",
    "react-textfit": "1.1.0",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0",
    "remark-breaks": "1.0.0",
    "reselect": "3.0.1",
    "semver": "5.6.0",
    "tslib": "1.9.3",
    "xlsx": "0.10.9"
  },
  "devDependencies": {
    "@types/classnames": "0.0.32",
    "@types/electron-window-state": "2.0.31",
    "@types/jest": "22.2.3",
    "@types/lodash": "4.14.88",
    "@types/node": "11.13.7",
    "@types/node-sass": "3.10.32",
    "@types/react": "16.8.7",
    "@types/react-custom-scrollbars": "4.0.5",
    "@types/react-dom": "16.8.2",
    "@types/react-portal": "4.0.2",
    "@types/react-redux": "7.0.3",
    "@types/semver": "5.5.0",
    "electron": "4.0.8",
    "electron-builder": "20.40.2",
    "eslint": "4.19.1",
    "eslint-plugin-tslint": "2.1.0",
    "eslint-plugin-typescript": "0.12.0",
    "jest": "24.7.1",
    "madge": "3.4.4",
    "node-sass": "4.11.0",
    "ts-jest": "24.0.2",
    "tslint": "5.14.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.4.3",
    "typescript-eslint-parser": "16.0.0",
    "typescript-tslint-plugin": "0.3.1"
  },
  "scripts": {
    "buildInsiderWin": "node ./buildInsiderWin.js",
    "buildInsiderLinux": "node ./buildInsiderLinux.js",
    "buildWin": "node ./buildWin.js",
    "buildLinux": "node ./buildLinux.js",
    "buildMac": "node ./buildMac.js",
    "compile": "tsc",
    "watch": "tsc --watch",
    "bundle": "node --max-old-space-size=2048 ./node_modules/typescript/lib/tsc.js",
    "start": "electron .",
    "bundle_l10ns": "node -r @std/esm src/data/buildAllLocales.mjs",
    "bundle_data": "node -r @std/esm src/data/buildData.mjs",
    "bundle_css": "node --experimental-modules bundleSass.mjs",
    "test": "jest",
    "circ": "madge -c ./src"
  },
  "repository": {},
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
